<h1>All Films</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th>Year</th>
  </tr>
  <% for film in @films %>
  <tr>
    <td><a href="/films/<%= film.id %>"><%= film.title %></a></td>
    <td>|</td>
    <td><a href="/films/year/<%= film.year %>"> <%= film.year %> </a></td>
  </tr>
  <% end %>
</table>
