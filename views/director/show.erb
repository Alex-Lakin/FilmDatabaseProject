<div class="same-row">
  <!-- print directors name -->
  <h1><%= @director.name %></h1>
  <!-- link to edit director page -->
  <a href="/director/<%= @director.id %>/edit" class="film-edit"> Edit </a>
</div>
<!-- print films heading -->
<h3>Films:</h3>
<!-- start film loop -->
<% @director.get_films().each do |film| %>
  <div class="same-row">
    <!-- prrint films name -->
    <h4><a href="/films/<%= film.id %>"><%= film.title %></a> (<%= film.year %>) </h4>
    <!-- get film-director link id -->
    <%link = Film_Director.find(film.id, @director.id)%>
    <!-- show remove button -->
    <form method="post" action="/films_directors/<%= link.id %>/delete">
    <input type= "submit" value="Remove" class="remove-button" />
    </form>
  </div>
<% end %>
<!-- show delete button -->
<form method="post" action="/director/<%=@director.id%>/delete">
<input type= "submit" value="Delete" />
</form>
